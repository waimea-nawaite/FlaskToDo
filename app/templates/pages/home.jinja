{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Home

{% endblock %}


{% block content %}

    <h1>task...</h1>

    <article>

        <ul>
            {% for thing in tasks %}

                <li>
                    <a href="/thing/{{ thing.id }}">
                        {{ thing.priority, thing.name }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

    <article>

        <h3>Add a New task...</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="task"
                placeholder="Name of new task"
                required
            >

            <input
                type="number"
                name="priority"
                min="0"
                max="5"
                placeholder="Whats the priority"
                required
            >


            <button>Add the task</button>

        </form>

    </article>

{% endblock %}

